<?xml version="1.0" encoding="UTF-8"?>
<sequence name="fault" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
  <!-- Log the message at the full log level with the ERROR_MESSAGE and the ERROR_CODE-->
  <log level="custom">
    <property name="MESSAGE" value="Executing default 'fault' sequence"/>
    <property expression="get-property('ERROR_CODE')" name="ERROR_CODE" xmlns:ns="http://org.apache.synapse/xsd"/>
    <property expression="get-property('ERROR_MESSAGE')"
      name="ERROR_MESSAGE" xmlns:ns="http://org.apache.synapse/xsd"/>
  </log>
  <!-- Drops the messages by default if there is a fault -->
  <drop/>
</sequence>
